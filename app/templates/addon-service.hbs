<div class="main-bar">

  {{partial 'nav-links'}}

  <div class="addon-services-container">
    <div class="title">{{model.humanName}} Add-on</div>
  </div>
</div>

<div class="sub-bar">
  <div class="addon-services-container">
    <div class="back-to-addons">{{fa-icon 'angle-left' size='lg'}}
      {{#link-to 'addon-services'}}Back to Add-ons{{/link-to}}
    </div>
  </div>
</div>

<div class="main-content">
  <div class="addon-plan-list addon-service-list">
    <ul>
      {{#each model.plans as |plan|}}
        <li class="addon-service-list-item">{{plan.humanName}} <div class="price">${{plan.priceInDollars}}/{{plan.price.unit}}</div></li>
      {{/each}}
    </ul>
  </div>
</div>
